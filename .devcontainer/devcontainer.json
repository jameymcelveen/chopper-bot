{
    "name": "Chopper Dev Environment",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "chopper",
    "workspaceFolder": "/ros_ws",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-iot.vscode-ros",
                "redhat.vscode-xml",
                "smilerobotics.urdf",
                "cursor.ai" 
            ]
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "colcon build --symlink-install && source install/setup.bash"
}
